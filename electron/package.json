{
  "name": "your-app-desktop",
  "version": "1.0.0",
  "description": "Desktop version of your app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:client": "cd ../client && npm run dev",
    "dev:server": "cd ../server && npm run dev",
    "build": "npm run build:client && electron-builder",
    "build:client": "cd ../client && npm run build",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "Your App",
    "directories": {
      "output": "../dist-desktop"
    },
    "files": [
      "**/*",
      "../client/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
